<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_criar_partida"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ronaldo.googlemapsaplication.CriarPartida">

    <TextView
        android:text="Criar partida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:id="@+id/criarpartidatext" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="time"
        android:ems="10"
        android:gravity="center"
        android:textColor="#555"
        android:background="#DDD"
        android:textSize="25dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/horariopartidatext"
        android:hint="Horário" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="center"
        android:textColor="#555"
        android:background="#DDD"
        android:textSize="25dp"
        android:layout_marginTop="36dp"
        android:id="@+id/localpartidatext"
        android:hint="Endereço"
        android:layout_below="@+id/horariopartidatext"
        android:layout_alignStart="@+id/horariopartidatext" />

    <EditText
        android:gravity="center"
        android:textColor="#555"
        android:background="#DDD"
        android:textSize="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/partidadatatext"
        android:hint="Data"
        android:layout_above="@+id/horariopartidatext"
        android:layout_alignStart="@+id/horariopartidatext"
        android:layout_marginBottom="39dp" />

    <Button
        android:text="confirmar"
        android:layout_width="wrap_content"
        android:onClick="matchCreated"
        android:layout_height="wrap_content"
        android:layout_below="@+id/localpartidatext"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:id="@+id/confirmbtn" />
</RelativeLayout>
