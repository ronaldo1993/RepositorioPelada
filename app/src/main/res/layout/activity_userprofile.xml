<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_userprofile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="projeto.activities.Userprofile">

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/habtext"
        android:layout_centerHorizontal="true"
        android:id="@+id/habrating" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Fair Play"
        android:gravity="center"
        android:ems="10"
        android:layout_below="@+id/habrating"
        android:layout_alignEnd="@+id/habtext"
        android:id="@+id/faitext" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/faitext"
        android:layout_alignStart="@+id/habrating"
        android:id="@+id/fairating" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Pontualidade"
        android:ems="10"
        android:gravity="center"
        android:layout_below="@+id/fairating"
        android:layout_alignStart="@+id/faitext"
        android:id="@+id/pontext" />

    <ImageView
        android:layout_height="120dp"
        app:srcCompat="@drawable/perfil"
        android:id="@+id/userphoto"
        android:layout_width="120dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ponrating"
        android:layout_below="@+id/pontext"
        android:layout_alignStart="@+id/fairating"
        android:numStars="5" />

    <TextView
      android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Habilidade"
            android:ems="10"
            android:gravity="center"
            android:id="@+id/habtext"
            android:layout_weight="1"
        android:layout_below="@+id/userphoto"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
